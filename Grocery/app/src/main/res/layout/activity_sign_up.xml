<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/white"
    android:padding="24dp">

    <TextView
        android:id="@+id/textView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo tài khoản"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green_main" />

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textView01"
        app:layout_constraintTop_toBottomOf="@id/textView01"
        app:layout_constraintEnd_toEndOf="@id/textView01"
        android:src="@drawable/ic_baseline_close_24"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtName"
        app:layout_constraintBottom_toBottomOf="@id/txtName"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/textView01"
        android:ems="14"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="36dp"/>


    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện\nthoại"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txtPhone"
        app:layout_constraintTop_toTopOf="@id/txtPhone"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtName"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:inputType="phone"
        android:ems="14"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="12dp"/>


    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtEmail"
        app:layout_constraintBottom_toBottomOf="@id/txtEmail"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtPhone"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:ems="14"
        android:inputType="textEmailAddress"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="12dp"/>


    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtPassword"
        app:layout_constraintBottom_toBottomOf="@id/txtPassword"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtEmail"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:ems="14"
        android:inputType="textPassword"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/textViewConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận\nmật khẩu"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtConfirmPassword"
        app:layout_constraintBottom_toBottomOf="@id/txtConfirmPassword"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/txtConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtPassword"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:ems="14"
        android:inputType="textPassword"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/textViewBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày sinh"
        app:layout_constraintTop_toTopOf="@id/spnDay"
        app:layout_constraintBottom_toBottomOf="@id/spnDay"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"/>

    <Spinner
        android:id="@+id/spnDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtConfirmPassword"
        app:layout_constraintRight_toLeftOf="@id/spnMonth"
        android:layout_marginRight="4dp"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/spnMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtConfirmPassword"
        app:layout_constraintRight_toLeftOf="@id/spnYear"
        android:layout_marginRight="4dp"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/spnYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtConfirmPassword"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/textViewGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới tính"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/groupGender"
        app:layout_constraintBottom_toBottomOf="@id/groupGender"
        android:textColor="@color/black"/>

    <RadioGroup
        android:id="@+id/groupGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spnDay"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <RadioButton
            android:id="@+id/rdoMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:textSize="16sp"
            android:layout_marginRight="32dp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rdoFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ"
            android:textSize="16sp"
            android:layout_marginRight="32dp"/>

    </RadioGroup>

    <CheckBox
        android:id="@+id/ckbPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đồng ý với các điều khoản"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/groupGender"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:text="Tiếp tục"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/bg_btn_red"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>