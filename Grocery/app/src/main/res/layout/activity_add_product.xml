<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddProductActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:padding="4dp">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_white"
            android:background="#88000000"
            android:padding="8dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp">
        <ImageButton
            android:id="@+id/btnSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_a_photo_green"
            android:background="@color/white"
            android:padding="4dp"/>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewImgProduct"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_temple"/>
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view01"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                app:layout_constraintTop_toBottomOf="@id/cardViewImgProduct"
                android:background="#f0f0f0"/>

            <EditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view01"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_input_text_full_border"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="text"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="Name of product"
                android:textSize="20sp"
                android:letterSpacing="0.06"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/txtName"
                app:layout_constraintTop_toTopOf="@id/txtName"
                app:layout_constraintBottom_toTopOf="@id/txtName"
                android:background="@color/white"
                android:layout_marginLeft="12dp"
                android:text="Name of Product"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="12sp"
                android:textColor="#555555"
                android:letterSpacing="0.03"/>

            <Spinner
                android:id="@+id/spnCategory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/txtName"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_input_text_full_border"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:letterSpacing="0.03"/>

            <TextView
                android:id="@+id/textViewAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/spnCategory"
                app:layout_constraintTop_toTopOf="@id/spnCategory"
                app:layout_constraintBottom_toTopOf="@id/spnCategory"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:text="Category"
                android:textSize="12sp"
                android:textColor="#555555"
                android:letterSpacing="0.06"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_drop"
                app:layout_constraintTop_toTopOf="@id/spnCategory"
                app:layout_constraintBottom_toBottomOf="@id/spnCategory"
                app:layout_constraintRight_toRightOf="@id/spnCategory"
                android:layout_marginRight="12dp"/>

            <EditText
                android:id="@+id/txtImportDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/spnCategory"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_input_text_full_border"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="date"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="Import date"
                android:textSize="20sp"
                android:letterSpacing="0.06"/>

            <TextView
                android:id="@+id/tvImportDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/txtImportDate"
                app:layout_constraintTop_toTopOf="@id/txtImportDate"
                app:layout_constraintBottom_toTopOf="@id/txtImportDate"
                android:background="@color/white"
                android:layout_marginLeft="12dp"
                android:text="Import Date"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="12sp"
                android:textColor="#555555"
                android:letterSpacing="0.03"/>

            <EditText
                android:id="@+id/txtImportPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtImportDate"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_input_text_full_border"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="number"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="120dp"
                android:hint="Import price"
                android:textSize="20sp"
                android:letterSpacing="0.06"/>

            <TextView
                android:id="@+id/tvImportPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/txtImportPrice"
                app:layout_constraintTop_toTopOf="@id/txtImportPrice"
                app:layout_constraintBottom_toTopOf="@id/txtImportPrice"
                android:background="@color/white"
                android:layout_marginLeft="12dp"
                android:text="Import Price"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="12sp"
                android:textColor="#555555"
                android:letterSpacing="0.03"/>

            <Spinner
                android:id="@+id/spnUnit"
                android:layout_width="80dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="@id/txtImportPrice"
                app:layout_constraintBottom_toBottomOf="@id/txtImportPrice"
                app:layout_constraintLeft_toRightOf="@id/txtImportPrice"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_input_text_full_border"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="12dp"
                android:letterSpacing="0.03" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_drop"
                app:layout_constraintTop_toTopOf="@id/spnUnit"
                app:layout_constraintBottom_toBottomOf="@id/spnUnit"
                app:layout_constraintRight_toRightOf="@id/spnUnit"
                android:layout_marginRight="8dp"/>

            <EditText
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtImportPrice"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_input_text_full_border"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="number"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="Price"
                android:textSize="20sp"
                android:letterSpacing="0.06"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/txtPrice"
                app:layout_constraintTop_toTopOf="@id/txtPrice"
                app:layout_constraintBottom_toTopOf="@id/txtPrice"
                android:background="@color/white"
                android:layout_marginLeft="12dp"
                android:text="Price"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="12sp"
                android:textColor="#555555"
                android:letterSpacing="0.03"/>

            <EditText
                android:id="@+id/txtDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtPrice"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_input_text_full_border"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="number"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="Discount"
                android:textSize="20sp"
                android:letterSpacing="0.06"/>

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/txtDiscount"
                app:layout_constraintTop_toTopOf="@id/txtDiscount"
                app:layout_constraintBottom_toTopOf="@id/txtDiscount"
                android:background="@color/white"
                android:layout_marginLeft="12dp"
                android:text="Discount  "
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="12sp"
                android:textColor="#555555"
                android:letterSpacing="0.03"/>

            <EditText
                android:id="@+id/txtQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtDiscount"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_input_text_full_border"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="number"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textSize="20sp"
                android:hint="Quantity"
                android:letterSpacing="0.06"/>

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/txtQuantity"
                app:layout_constraintTop_toTopOf="@id/txtQuantity"
                app:layout_constraintBottom_toTopOf="@id/txtQuantity"
                android:background="@color/white"
                android:layout_marginLeft="12dp"
                android:text="Quantity"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="12sp"
                android:textColor="#555555"
                android:letterSpacing="0.03"/>

            <EditText
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtQuantity"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_input_text_full_border"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="textMultiLine"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textSize="20sp"
                android:maxLines="6"
                android:hint="Description"
                android:letterSpacing="0.06"
                android:scrollbars="vertical"
                android:longClickable="false"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/txtDescription"
                app:layout_constraintTop_toTopOf="@id/txtDescription"
                app:layout_constraintBottom_toTopOf="@id/txtDescription"
                android:background="@color/white"
                android:layout_marginLeft="12dp"
                android:text="Description"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="12sp"
                android:textColor="#555555"
                android:letterSpacing="0.03"/>

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtDescription"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/bg_btn_green"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>