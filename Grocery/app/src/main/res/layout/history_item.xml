<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/icons8_topup_payment_64"/>

    <TextView
        android:id="@+id/txtViewBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgIcon"
        android:layout_marginRight="12dp"
        android:text="The Grocery - Thu Duc, TP. Ho Chi Minh"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtViewBranch"
        app:layout_constraintBottom_toTopOf="@id/txtViewState"
        app:layout_constraintLeft_toLeftOf="@id/txtViewBranch"
        android:text="11:00 01/06/2021"/>

    <TextView
        android:id="@+id/txtViewState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtViewTime"
        app:layout_constraintLeft_toLeftOf="@id/txtViewTime"
        android:textColor="#00aa00"
        android:text="Completed"/>

    <TextView
        android:id="@+id/txtViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtViewState"
        app:layout_constraintBottom_toBottomOf="@id/txtViewState"
        android:text="Ä‘30,000"
        android:textSize="16sp"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>