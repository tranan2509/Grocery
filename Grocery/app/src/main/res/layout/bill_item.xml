<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <TextView
        android:id="@+id/txtViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Name of product"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtViewName"
        app:layout_constraintLeft_toLeftOf="@id/txtViewName"
        android:layout_marginTop="4dp"
        android:text="đ25,000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/txtViewPrice"
        app:layout_constraintTop_toTopOf="@id/txtViewPrice"
        app:layout_constraintBottom_toBottomOf="@id/txtViewPrice"
        android:layout_marginLeft="12dp"
        android:text="x4"
        android:textStyle="bold"
        android:letterSpacing="0.03"/>

    <TextView
        android:id="@+id/txtViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txtViewPrice"
        app:layout_constraintBottom_toBottomOf="@id/txtViewPrice"
        app:layout_constraintRight_toRightOf="parent"
        android:text="đ100,000"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>