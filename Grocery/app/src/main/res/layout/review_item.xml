<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAvatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="100dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/camera"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cardViewAvatar"
        app:layout_constraintLeft_toRightOf="@id/cardViewAvatar"
        android:layout_marginLeft="16dp"
        android:text="tranan2509"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/layoutStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtViewEmail"
        app:layout_constraintLeft_toLeftOf="@id/txtViewEmail"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgStar01"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_24"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/imgStar02"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_24"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/imgStar03"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_24"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/imgStar04"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_24"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/imgStar05"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_48_none"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutStar"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="36dp"
        android:textSize="16sp"
        android:text="Description review of product"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtViewDescription"
        app:layout_constraintStart_toStartOf="@id/txtViewDescription"
        android:layout_marginTop="8dp"
        android:text="19:05 20-11-2021"/>

</androidx.constraintlayout.widget.ConstraintLayout>